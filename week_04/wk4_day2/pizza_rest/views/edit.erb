<form action="/pizza-orders/<%= @order.id%>" method="post">
  <label for="first-name">First Name:</label>
<input type="text" name="first-name" id="first-name"
value="<%= @order.first_name %>"
/>

<label for="last-name">last Name:</label>
<input type="text" name="last-name" id="last-name"
value="<%= @order.last_name %>"/>



<label for="pizza-topping">Pizza Topping:</label>
<select name="topping" id="pizza-topping"
>
<% for topping in @toppings %>
<option value="<%=topping %>"
 <%= "selected" if topping == @order.topping %>
 ><%= topping %></option>
 <% end %>

</select>


<label for="quantity">Quantity:</label>
<input type="number" name="topping" id="pizza-topping"
value="<%= @order.quantity %>"/>

<input type="submit" value="edit order">
</form>
